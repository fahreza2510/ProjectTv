<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FatekActivity"
    android:background="@drawable/bgdarkmenu">

    <TextClock
        android:layout_marginEnd="55dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="Clock"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/inter"
        android:format12Hour="hh:mm"
        android:textColor="#FFFAF9F9"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#192242">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logoupb"
                    />

                <TextView
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="8sp"
                    android:text="FAKULTAS TEKNIK \n UNIVERSITAS PELITA BANGSA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="FAKULTAS TEKNIK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="18dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:text="We Create The Best Engineer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/kotakvisi_fai">

                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingStart="23px"
                    android:paddingEnd="23px"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="24px"
                        android:textStyle="italic"
                        android:text="Visi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:text="“ Menjadi Fakultas Unggul dalam Bidang Kewiraushaan berbasis Teknologi Berkelas Internasional Pada Tahun 2045 “"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text="Misi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="12.5sp"
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="1. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="12.5sp"
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="Menyelenggarakan proses pendidikan dan pembelajaran yang berkualitas sehingga amenghasilkan lulusan yang unggul, mandiri, dan kompetitif."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="2. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="12.5sp"
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="Memiliki laboratorium sebagai pusat penelitian, pengabdian kepada masyarakat dan fasilitas pendukung kerja sama yang memiliki standar nasional dan internasional."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="12.5sp"
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="3. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textSize="12.5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abezee"
                            android:text="Menyelenggarakan penelitian barbasis teknologi dan kewirausahaan untuk menghasilkan publikasi HaKI, buku ajar, kebijakan, dan teknologi yang berhasil guna serta berdaya guna dengan mengedepankan budaya dan sumber daya lokal."
                            android:textColor="#ffffff" />
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/fotoupb"
                android:layout_width="610dp"
                android:layout_height="350dp"/>

            <LinearLayout
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="325dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/kotakprodi_fai">

                    <TextView
                        android:layout_marginStart="14dp"
                        android:textColor="#ffffff"
                        android:textSize="16.4sp"
                        android:textStyle="italic"
                        android:text=" PROGRAM STUDI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:textSize="10.5sp"
                                android:textColor="#ffffff"
                                android:textAllCaps="true"
                                android:fontFamily="@font/inter"
                                android:text=" ARSITEKTUR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginStart="6dp"
                                android:textSize="10.5sp"
                                android:textColor="#ffffff"
                                android:textAllCaps="true"
                                android:fontFamily="@font/inter"
                                android:text=" Teknik INFORMATIKA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginStart="6dp"
                                android:textSize="10.5sp"
                                android:textColor="#ffffff"
                                android:textAllCaps="true"
                                android:fontFamily="@font/inter"
                                android:text=" teknik LINGKUNGAN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="28dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="6dp"
                                android:textSize="10.5sp"
                                android:textColor="#ffffff"
                                android:textAllCaps="true"
                                android:fontFamily="@font/inter"
                                android:text=" teknik SIPIL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textSize="10.5sp"
                                android:textColor="#ffffff"
                                android:textAllCaps="true"
                                android:fontFamily="@font/inter"
                                android:text=" teknik INDUSTRI"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textSize="10.5sp"
                                android:textColor="#ffffff"
                                android:textAllCaps="true"
                                android:fontFamily="@font/inter"
                                android:text=" teknologi HASIL PERTANIAN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom|center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#192242">

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:layout_marginStart="6dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/intersemibold"
                        android:text=" DEKAN FAKULTAS TEKNIK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:layout_marginStart="6dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:fontFamily="@font/abezee"
                        android:text="Putri Anggun Sari, S.Pt., M.Si"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>