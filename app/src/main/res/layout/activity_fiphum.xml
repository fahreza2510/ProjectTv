<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiphumActivity"
    android:background="@drawable/bgdarkmenu">

    <TextClock
        android:layout_marginEnd="55dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="Clock"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/inter"
        android:format12Hour="hh:mm"
        android:textColor="#FFFAF9F9"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#7C0F7F">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logoupb"
                    />

                <TextView
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="8sp"
                    android:text="FAKULTAS FIPHUM \n UNIVERSITAS PELITA BANGSA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="16.5sp"
                    android:textStyle="bold"
                    android:text="FAKULTAS ILMU PENDIDIKAN DAN HUMANIORA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="18dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:text="Universitas Pelita Bangsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/kotakvisi_fai">

                <LinearLayout
                    android:paddingTop="6dp"
                    android:paddingStart="23px"
                    android:paddingEnd="23px"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="24px"
                        android:textStyle="italic"
                        android:text="Visi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="“ Menjadikan fakultas yang humanis, kreatif dan inovatif dibidang ilmu pendidikan dan humaniora yang berjiwa entrepreneur pada tahun 2045 “"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16px"
                        />

                    <TextView
                        android:layout_marginTop="6px"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:text="Misi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="1. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="Menyelenggarakan pendidikan yang berkualitas dan humanis di bidang ilmu pendidikan dan humaniora."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="2. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="Menyelenggarakan penelitian dan pengembangan ilmu pengetahuan dan teknologi yang humanis dan inovatif dalam bidang ilmu pendidikan dan humaniora yang berorientasi pada problem solving."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="3. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:fontFamily="@font/abezee"
                            android:textColor="#ffffff"
                            android:text="Menjalani kerjasama baik nasional, regional dan internasional dalam rangka pengembangan ilmu pengetahuan dan teknologi dalam bidang ilmu pendidikan dan humaniora."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/fotoupb"
                android:layout_width="610dp"
                android:layout_height="350dp"/>

            <LinearLayout
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="325dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/kotakprodi_fai">

                    <TextView
                        android:layout_marginStart="6dp"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:textStyle="italic"
                        android:text=" PROGRAM STUDI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="6dp"
                            android:textSize="10.5sp"
                            android:textColor="#ffffff"
                            android:textAllCaps="true"
                            android:fontFamily="@font/inter"
                            android:text=" HUKUM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="6dp"
                            android:textSize="10.5sp"
                            android:textColor="#ffffff"
                            android:textAllCaps="true"
                            android:fontFamily="@font/inter"
                            android:text=" PENDIDIKAN GURU SEKOLAH DASAR (PGSD)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="6dp"
                            android:textSize="10.5sp"
                            android:textColor="#ffffff"
                            android:textAllCaps="true"
                            android:fontFamily="@font/inter"
                            android:text=" PENDIDIKAN GURU PENDIDIKAN ANAK USIA DINI (PGPAUD)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom|center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7C0F7F">

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:layout_marginStart="6dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:fontFamily="@font/intersemibold"
                        android:text="DEKAN FAKULTAS FIPHUM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="end"
                        android:layout_marginStart="6dp"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="italic"
                        android:fontFamily="@font/abezee"
                        android:text="Dr. Miftah Wangsadanureja, S.Pd.I., M.Pd.I"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>