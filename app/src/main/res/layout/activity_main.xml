<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgmain">

    <ImageView
        android:src="@drawable/wifi"
        android:layout_marginStart="55dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <TextClock
        android:layout_marginEnd="55dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="Clock"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/inter"
        android:format12Hour="hh : mm"
        android:textColor="#FFFAF9F9"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/iconlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginStart="55dp"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textColor="#FFFAF9F9"
            android:text="Faculty of Pelita Bangsa University"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_fai"
                    android:scaleType="centerCrop"
                    android:layout_width="215px"
                    android:layout_height="150px"
                    android:src="@drawable/fai_presed"
                    />

                <ImageView
                    android:layout_marginStart="148dp"
                    android:id="@+id/btn_feb"
                    android:scaleType="centerCrop"
                    android:layout_width="215px"
                    android:layout_height="150px"
                    android:src="@drawable/feb_presed"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="143dp"
                android:layout_marginStart="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_fiphum"
                    android:scaleType="centerCrop"
                    android:layout_width="215px"
                    android:layout_height="150px"
                    android:src="@drawable/fiphum_presed"
                    />

                <ImageView
                    android:layout_marginStart="148dp"
                    android:id="@+id/btn_fatek"
                    android:scaleType="centerCrop"
                    android:layout_width="215px"
                    android:layout_height="150px"
                    android:src="@drawable/fatek_presed"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <VideoView
            android:id="@+id/video"
            android:layout_gravity="end"
            android:layout_width="530dp"
            android:layout_height="300dp"/>



    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>